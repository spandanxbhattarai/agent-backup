# VoIP Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Asterisk Configuration
ASTERISK_HOST=localhost
ASTERISK_PORT=5038
ASTERISK_USERNAME=admin
ASTERISK_PASSWORD=asterisk
ASTERISK_SIP_DOMAIN=localhost:5060

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
WEBHOOK_BASE_URL=https://your-domain.com

# SIP Trunk Configuration (if using traditional SIP provider)
SIP_PROVIDER_HOST=sip.your-provider.com
SIP_PROVIDER_USERNAME=your_username
SIP_PROVIDER_PASSWORD=your_password
SIP_PROVIDER_DID=your_did_number

# Restaurant Configuration
RESTAURANT_DID_NUMBER=your_restaurant_phone_number
RESTAURANT_NAME="Your Restaurant Name"

# Database Configuration (if you want to add persistent storage later)
# DATABASE_URL=postgresql://username:password@localhost:5432/voip_db

# Logging Configuration
LOG_LEVEL=debug
ENABLE_CALL_LOGGING=true